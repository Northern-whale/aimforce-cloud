generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id                    String           @id @default(cuid())
  name                  String           // Business name
  industry              String?          // retail, restaurant, salon, medical, etc.
  address               String?
  phone                 String?          // Business phone number
  website               String?
  hours                 String?          // JSON: {"mon": "10:00-22:00", ...}
  ownerPhone            String?          // Owner's personal phone for transfers
  ownerEmail            String?
  ownerTelegram         String?          // Telegram chat ID for alerts
  elevenlabsAgentId     String?          // ElevenLabs agent ID for this business
  twilioNumber          String?          // Assigned Twilio phone number
  knowledgeBase         String?          // JSON: products, FAQs, policies
  voiceId               String?          // ElevenLabs voice ID
  greeting              String?          // Agent greeting message
  transferTriggers      String?          // JSON array of transfer trigger keywords
  plan                  String           @default("starter") // starter, growth, enterprise
  status                String           @default("onboarding") // onboarding, active, paused, cancelled
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  users            User[]
  callLogs         CallLog[]
  products         Product[]
  businessInsights BusinessInsight[]
  events           Event[]
  metrics          Metric[]
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String?
  passwordHash   String
  role           String          @default("owner")
  businessId     String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  business       Business?       @relation(fields: [businessId], references: [id])
  conversations  Conversation[]
  socialAccounts SocialAccount[]
  scheduledPosts ScheduledPost[]
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String?
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  inputMethod    String       @default("text")
  tokenCount     Int?
  latencyMs      Int?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model CallLog {
  id              String           @id @default(cuid())
  businessId      String?
  externalId      String?          @unique
  phoneNumber     String?
  direction       String
  status          String
  duration        Int?
  summary         String?
  transcript      String?
  sentiment       String?
  transferredTo   String?
  metadata        String?
  category        String?          // product_inquiry, complaint, general, wholesale
  aiResolved      Boolean          @default(false)
  transferred     Boolean          @default(false)
  topicTags       String?          // JSON array
  customerIntent  String?          // buying, browsing, complaining, information
  createdAt       DateTime         @default(now())

  business        Business?        @relation(fields: [businessId], references: [id])
  productMentions ProductMention[]

  @@index([businessId])
}

model Metric {
  id         String    @id @default(cuid())
  businessId String?
  name       String
  value      Float
  period     String
  date       DateTime
  metadata   String?
  createdAt  DateTime  @default(now())

  business   Business? @relation(fields: [businessId], references: [id])

  @@unique([name, period, date])
  @@index([businessId])
}

model Event {
  id         String    @id @default(cuid())
  businessId String?
  type       String
  payload    String
  read       Boolean   @default(false)
  createdAt  DateTime  @default(now())

  business   Business? @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model Product {
  id              String           @id @default(cuid())
  businessId      String?
  name            String
  brand           String
  origin          String           // Cuban, Dominican, Nicaraguan
  price           Float            // in rubles
  priceUSD        Float?           // optional USD equivalent
  strength        String           // mild, medium, medium-full, full
  length          Int?             // in mm
  inStock         Boolean          @default(true)
  stock           Int              @default(0)
  description     String?
  imageUrl        String?
  category        String           // premium, standard, exclusive
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  business        Business?        @relation(fields: [businessId], references: [id])
  productMentions ProductMention[]

  @@index([businessId])
}

model ProductMention {
  id        String   @id @default(cuid())
  callLogId String
  productId String
  mentions  Int      @default(1)
  context   String?  // what customer asked about it
  createdAt DateTime @default(now())
  
  callLog   CallLog  @relation(fields: [callLogId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
}

model BusinessInsight {
  id          String    @id @default(cuid())
  businessId  String?
  type        String    // trending_product, peak_hour, customer_interest, revenue_opportunity
  title       String
  description String
  data        String?   // JSON metadata
  priority    String    @default("normal") // low, normal, high
  actionable  Boolean   @default(false)
  createdAt   DateTime  @default(now())

  business    Business? @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model SocialAccount {
  id           String    @id @default(cuid())
  userId       String
  platform     String    // instagram, facebook, tiktok, linkedin, twitter
  accountId    String    // platform-specific ID
  accountName  String    // @username or page name
  accessToken  String    // encrypted
  refreshToken String?   // encrypted
  expiresAt    DateTime?
  connected    Boolean   @default(true)
  metadata     String?   // JSON for platform-specific data
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, platform, accountId])
}

model ScheduledPost {
  id           String    @id @default(cuid())
  userId       String
  platforms    String    // JSON array ["instagram", "facebook"]
  content      String
  mediaUrls    String?   // JSON array of media URLs
  scheduledFor DateTime
  status       String    @default("draft") // draft, scheduled, posting, posted, failed
  postIds      String?   // JSON object { "instagram": "post_id", "facebook": "post_id" }
  analytics    String?   // JSON object with platform analytics
  error        String?   // Error message if failed
  retryCount   Int       @default(0)
  lastRetryAt  DateTime?
  createdAt    DateTime  @default(now())
  postedAt     DateTime?
  updatedAt    DateTime  @updatedAt
  
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([status, scheduledFor])
  @@index([userId, status])
}
