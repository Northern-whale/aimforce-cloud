generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  passwordHash  String
  role          String         @default("owner")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String?
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  inputMethod    String       @default("text")
  tokenCount     Int?
  latencyMs      Int?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model CallLog {
  id              String           @id @default(cuid())
  externalId      String?          @unique
  phoneNumber     String?
  direction       String
  status          String
  duration        Int?
  summary         String?
  transcript      String?
  sentiment       String?
  transferredTo   String?
  metadata        String?
  category        String?          // product_inquiry, complaint, general, wholesale
  aiResolved      Boolean          @default(false)
  transferred     Boolean          @default(false)
  topicTags       String?          // JSON array
  customerIntent  String?          // buying, browsing, complaining, information
  createdAt       DateTime         @default(now())
  
  productMentions ProductMention[]
}

model Metric {
  id        String   @id @default(cuid())
  name      String
  value     Float
  period    String
  date      DateTime
  metadata  String?
  createdAt DateTime @default(now())

  @@unique([name, period, date])
}

model Event {
  id        String   @id @default(cuid())
  type      String
  payload   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id              String           @id @default(cuid())
  name            String
  brand           String
  origin          String           // Cuban, Dominican, Nicaraguan
  price           Float            // in rubles
  priceUSD        Float?           // optional USD equivalent
  strength        String           // mild, medium, medium-full, full
  length          Int?             // in mm
  inStock         Boolean          @default(true)
  stock           Int              @default(0)
  description     String?
  imageUrl        String?
  category        String           // premium, standard, exclusive
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  productMentions ProductMention[]
}

model ProductMention {
  id        String   @id @default(cuid())
  callLogId String
  productId String
  mentions  Int      @default(1)
  context   String?  // what customer asked about it
  createdAt DateTime @default(now())
  
  callLog   CallLog  @relation(fields: [callLogId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
}

model BusinessInsight {
  id          String   @id @default(cuid())
  type        String   // trending_product, peak_hour, customer_interest, revenue_opportunity
  title       String
  description String
  data        String?  // JSON metadata
  priority    String   @default("normal") // low, normal, high
  actionable  Boolean  @default(false)
  createdAt   DateTime @default(now())
}
