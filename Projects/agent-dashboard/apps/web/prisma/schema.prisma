generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  passwordHash  String
  role          String         @default("owner")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String?
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  inputMethod    String       @default("text")
  tokenCount     Int?
  latencyMs      Int?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model CallLog {
  id            String   @id @default(cuid())
  externalId    String?  @unique
  phoneNumber   String?
  direction     String
  status        String
  duration      Int?
  summary       String?
  transcript    String?
  sentiment     String?
  transferredTo String?
  metadata      String?
  createdAt     DateTime @default(now())
}

model Metric {
  id        String   @id @default(cuid())
  name      String
  value     Float
  period    String
  date      DateTime
  metadata  String?
  createdAt DateTime @default(now())

  @@unique([name, period, date])
}

model Event {
  id        String   @id @default(cuid())
  type      String
  payload   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
