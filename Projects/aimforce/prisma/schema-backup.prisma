// AIMForce Platform - Database Schema (SQLite Compatible)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          String    @default("CLIENT") // OWNER, CLIENT, AGENT
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  client        Client?
  sessions      Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// CLIENT MANAGEMENT
// ============================================================================

model Client {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  industry    String?
  status      String   @default("ACTIVE") // ACTIVE, PAUSED, ARCHIVED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects        Project[]
  agents          AgentAssignment[]
  tasks           Task[]
  uploads         FileUpload[]
  voiceNotes      VoiceNote[]
  recommendations Recommendation[]
}

// ============================================================================
// PROJECT & TASK MANAGEMENT
// ============================================================================

model Project {
  id          String   @id @default(cuid())
  clientId    String
  name        String
  description String?
  status      String   @default("PLANNING") // PLANNING, IN_PROGRESS, REVIEW, COMPLETED, ARCHIVED
  priority    String   @default("MEDIUM")   // LOW, MEDIUM, HIGH, URGENT
  startDate   DateTime?
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  tasks       Task[]
}

model Task {
  id          String   @id @default(cuid())
  clientId    String
  projectId   String?
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, REVIEW, DONE, BLOCKED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  assignedTo  String?  // Agent ID
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  agent       Agent?   @relation(fields: [assignedTo], references: [id], onDelete: SetNull)
}

// ============================================================================
// AI AGENT SYSTEM
// ============================================================================

model Agent {
  id           String            @id @default(cuid())
  name         String
  type         String            // MARKETING, CONTENT, ANALYTICS, RECEPTIONIST, POLYMARKET, GENERAL
  description  String?
  status       String            @default("AVAILABLE") // AVAILABLE, BUSY, OFFLINE
  capabilities String            // JSON array of capability strings
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  
  assignments  AgentAssignment[]
  tasks        Task[]
  activities   AgentActivity[]
}

model AgentAssignment {
  id         String   @id @default(cuid())
  clientId   String
  agentId    String
  assignedAt DateTime @default(now())
  
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  agent      Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, agentId])
}

model AgentActivity {
  id          String   @id @default(cuid())
  agentId     String
  activity    String
  description String?
  timestamp   DateTime @default(now())
  
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
}

// ============================================================================
// VOICE & FILES
// ============================================================================

model VoiceNote {
  id            String   @id @default(cuid())
  clientId      String
  audioUrl      String
  transcription String?
  duration      Int?     // seconds
  createdAt     DateTime @default(now())
  
  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model FileUpload {
  id         String   @id @default(cuid())
  clientId   String
  fileName   String
  fileType   String
  fileUrl    String
  fileSize   Int      // bytes
  uploadedAt DateTime @default(now())
  
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

// ============================================================================
// ANALYTICS & RECOMMENDATIONS
// ============================================================================

model Recommendation {
  id          String   @id @default(cuid())
  clientId    String?
  title       String
  description String
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  category    String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  client      Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Analytics {
  id         String   @id @default(cuid())
  clientId   String?
  metric     String
  value      Float
  unit       String?
  period     String   // daily, weekly, monthly
  recordedAt DateTime @default(now())
}
