// AIMForce Platform - Phase 2 Schema (SQLite Compatible)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          String    @default("CLIENT") // OWNER, CLIENT, AGENT
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  client        Client?
  sessions      Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// CLIENT MANAGEMENT
// ============================================================================

model Client {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  industry    String?
  status      String   @default("ACTIVE") // ACTIVE, PAUSED, ARCHIVED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects        Project[]
  agents          AgentAssignment[]
  tasks           Task[]
  uploads         FileUpload[]
  voiceNotes      VoiceNote[]
  recommendations Recommendation[]
  socialAccounts  SocialAccount[]
  scheduledPosts  ScheduledPost[]
  contentLibrary  ContentLibrary[]
  apiCredentials  APICredential[]
}

// ============================================================================
// PROJECT & TASK MANAGEMENT
// ============================================================================

model Project {
  id          String   @id @default(cuid())
  clientId    String
  name        String
  description String?
  status      String   @default("PLANNING") // PLANNING, IN_PROGRESS, REVIEW, COMPLETED, ARCHIVED
  priority    String   @default("MEDIUM")   // LOW, MEDIUM, HIGH, URGENT
  startDate   DateTime?
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  tasks       Task[]
}

model Task {
  id          String   @id @default(cuid())
  clientId    String
  projectId   String?
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, REVIEW, DONE, BLOCKED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  assignedTo  String?  // Agent ID
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  agent       Agent?   @relation(fields: [assignedTo], references: [id], onDelete: SetNull)
}

// ============================================================================
// AI AGENT SYSTEM
// ============================================================================

model Agent {
  id           String            @id @default(cuid())
  name         String
  type         String            // MARKETING, CONTENT, ANALYTICS, RECEPTIONIST, POLYMARKET, GENERAL
  description  String?
  status       String            @default("AVAILABLE") // AVAILABLE, BUSY, OFFLINE
  capabilities String            // JSON array of capability strings
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  
  assignments  AgentAssignment[]
  tasks        Task[]
  activities   AgentActivity[]
}

model AgentAssignment {
  id         String   @id @default(cuid())
  clientId   String
  agentId    String
  assignedAt DateTime @default(now())
  
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  agent      Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, agentId])
}

model AgentActivity {
  id          String   @id @default(cuid())
  agentId     String
  activity    String
  description String?
  timestamp   DateTime @default(now())
  
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
}

// ============================================================================
// VOICE & FILES
// ============================================================================

model VoiceNote {
  id            String   @id @default(cuid())
  clientId      String
  audioUrl      String
  transcription String?
  duration      Int?     // seconds
  createdAt     DateTime @default(now())
  
  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model FileUpload {
  id         String   @id @default(cuid())
  clientId   String
  fileName   String
  fileType   String
  fileUrl    String
  fileSize   Int      // bytes
  uploadedAt DateTime @default(now())
  
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

// ============================================================================
// ANALYTICS & RECOMMENDATIONS
// ============================================================================

model Recommendation {
  id          String   @id @default(cuid())
  clientId    String?
  title       String
  description String
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  category    String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  client      Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Analytics {
  id         String   @id @default(cuid())
  clientId   String?
  metric     String
  value      Float
  unit       String?
  period     String   // daily, weekly, monthly
  recordedAt DateTime @default(now())
}

// ============================================================================
// SOCIAL MEDIA MANAGEMENT (PHASE 2)
// ============================================================================

model SocialAccount {
  id              String   @id @default(cuid())
  clientId        String
  platform        String   // FACEBOOK, INSTAGRAM, LINKEDIN, TWITTER, TIKTOK, YOUTUBE
  accountName     String
  accountId       String   // Platform-specific ID
  accessToken     String   // Encrypted in production
  refreshToken    String?  // Encrypted in production
  tokenExpiresAt  DateTime?
  isActive        Boolean  @default(true)
  connectedAt     DateTime @default(now())
  lastUsed        DateTime?
  
  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  scheduledPosts  ScheduledPost[]
  
  @@unique([clientId, platform, accountId])
}

model ScheduledPost {
  id              String   @id @default(cuid())
  clientId        String
  socialAccountId String
  content         String
  mediaUrls       String?  // JSON array of media URLs
  scheduledFor    DateTime
  status          String   @default("SCHEDULED") // SCHEDULED, POSTED, FAILED, CANCELLED
  platform        String   // FACEBOOK, INSTAGRAM, LINKEDIN, TWITTER, TIKTOK, YOUTUBE
  postId          String?  // Platform post ID after publishing
  aiOptimized     Boolean  @default(false)
  aiScore         Float?   // 0-100 predicted engagement score
  engagementData  String?  // JSON: likes, comments, shares
  errorMessage    String?
  createdAt       DateTime @default(now())
  postedAt        DateTime?
  
  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)
  
  @@index([scheduledFor])
  @@index([status])
}

model ContentLibrary {
  id          String   @id @default(cuid())
  clientId    String
  fileName    String
  fileType    String   // IMAGE, VIDEO, DOCUMENT, AUDIO
  mimeType    String?  // image/jpeg, video/mp4, etc.
  fileUrl     String   // Google Drive URL
  thumbnailUrl String? // For videos
  fileSize    Int
  width       Int?     // For images/videos
  height      Int?     // For images/videos
  duration    Int?     // For videos/audio (seconds)
  caption     String?
  tags        String?  // JSON array
  aiGenerated Boolean  @default(false)
  aiCaption   String?  // AI-generated caption
  uploadedAt  DateTime @default(now())
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@index([clientId])
  @@index([fileType])
}

model APICredential {
  id          String   @id @default(cuid())
  clientId    String
  service     String   // GOOGLE_DRIVE, FACEBOOK, LINKEDIN, TWITTER, STRIPE, SENDGRID, etc.
  apiKey      String   // Encrypted in production
  apiSecret   String?  // Encrypted in production
  accessToken String?  // For OAuth services
  refreshToken String?
  tokenExpiresAt DateTime?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  lastUsed    DateTime?
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, service])
}

// ============================================================================
// SOCIAL MEDIA ANALYTICS (PHASE 2)
// ============================================================================

model SocialAnalytics {
  id              String   @id @default(cuid())
  clientId        String?
  platform        String
  metric          String   // followers, engagement_rate, reach, impressions, etc.
  value           Float
  date            DateTime
  recordedAt      DateTime @default(now())
  
  @@index([clientId, platform, date])
}

model OptimalPostingTime {
  id              String   @id @default(cuid())
  clientId        String
  platform        String
  dayOfWeek       Int      // 0-6 (Sunday-Saturday)
  hour            Int      // 0-23
  engagementScore Float    // Historical average engagement at this time
  sampleSize      Int      // Number of posts in sample
  updatedAt       DateTime @updatedAt
  
  @@unique([clientId, platform, dayOfWeek, hour])
}
