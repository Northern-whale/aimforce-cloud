# AI Content Studio - Environment Variables

# API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here
OPENAI_API_KEY=your_openai_key_here  # Optional, for alternative LLM

# Storage
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
S3_BUCKET_NAME=ai-content-studio
USE_LOCAL_STORAGE=true

# Redis (optional, for queue system)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Settings
DEFAULT_VOICE_MODEL=eleven_multilingual_v2
DEFAULT_LLM_MODEL=claude-sonnet-4
MAX_SCRIPT_LENGTH=500
DEFAULT_LANGUAGE=en
SUPPORT_SPANISH=true

# Processing
MAX_VIDEO_SIZE_MB=500
MAX_PROCESSING_TIME_SECONDS=300
CONCURRENT_JOBS=3

# Voice Settings
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.75
VOICE_STYLE=0.0
VOICE_USE_SPEAKER_BOOST=true
